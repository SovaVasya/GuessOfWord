<Window x:Class="GuessOfWord.Rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessOfWord"
        mc:Ignorable="d"
        Title="Rules" Height="350" Width="300" Background="#000D20">
    <Window.Resources>
        <Style x:Key="CRButton" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#5C718F"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                Background="{TemplateBinding Background}" 
                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CRRButton" TargetType="Button">
            <Setter Property="Width" Value="295"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#5C718F"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
        Background="{TemplateBinding Background}" 
        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MB" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image Margin="31,64,216,217" Source="/Images/nULLrectangle.png" Stretch="Fill" Height="53" Width="53"/>
        <Image Margin="31,224,216,57" Source="/Images/Truerectangle.png" Stretch="Fill" Height="53" Width="53"/>
        <Image Margin="31,141,216,140" Source="/Images/fALSErectangle.png" Stretch="Fill" Height="53" Width="53"/>
        <Label Content="Правила" Foreground="White" Margin="0,10,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="152"/>
        <Label Content="- Нет в слове" Foreground="White" Margin="89,73,0,0" FontSize="20" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="162"/>
        <Label Content="- Не на своём" Foreground="White" Margin="89,0,0,0" FontSize="20" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="162" Height="54"/>
        <Label Content="   месте" Foreground="White" Margin="89,167,0,0" FontSize="20" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="162" Height="52"/>
        <Label Content="- Правильно" Foreground="White" Margin="89,233,0,0" FontSize="20" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="152"/>
        <Label Content="А" Foreground="White" Margin="40,0,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="34" Height="52"/>
        <Label Content="А" Foreground="White" Margin="40,65,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="34" Height="52"/>
        <Label Content="А" Foreground="White" Margin="40,224,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="34" Height="52"/>
        <Button Content="Закрыть" Style="{StaticResource CRRButton}" Margin="92,293,92,10" Height="NaN" Width="NaN" Click="Close"/>

    </Grid>
</Window>
