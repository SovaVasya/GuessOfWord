<Window x:Class="GuessOfWord.Rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessOfWord"
        mc:Ignorable="d"
        Title="Rules" Height="700" Width="500" Background="#000D20" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="CRButton" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#5C718F"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                Background="{TemplateBinding Background}" 
                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CRRButton" TargetType="Button">
            <Setter Property="Width" Value="295"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#5C718F"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
        Background="{TemplateBinding Background}" 
        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MB" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image Margin="89,292,316,292" Source="/Images/fALSErectangle.png" Stretch="Fill"/>
        <Image Margin="89,443,316,146" Source="/Images/Truerectangle.png" Stretch="Fill"/>
        <Image Margin="89,139,316,450" Source="/Images/nULLrectangle.png" Stretch="Fill"/>
        <Label Content="Правила" Foreground="White" Margin="0,10,0,0" FontSize="40" Style="{StaticResource MB}" VerticalAlignment="Top" Width="208"/>
        <Label Content="- Нет в слове" Foreground="White" Margin="189,163,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="257"/>
        <Label Content="- Не на своём месте" Foreground="White" Margin="184,0,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Left" Width="306" Height="54"/>
        <Label Content="- Правильно" Foreground="White" Margin="189,472,0,0" FontSize="30" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="218"/>
        <Label Content="А" Foreground="White" Margin="112,448,0,0" FontSize="50" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="69"/>
        <Label Content="А" Foreground="White" Margin="112,141,0,0" FontSize="50" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="69"/>
        <Label Content="А" Foreground="White" Margin="112,298,0,0" FontSize="50" Style="{StaticResource MB}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="48" Height="69"/>
        <Button Content="Закрыть" FontSize="20" Style="{StaticResource CRRButton}" Margin="112,600,112,46" Height="NaN" Width="NaN" Click="Close"/>

    </Grid>
</Window>
